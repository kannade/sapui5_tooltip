<mvc:View controllerName="hint.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m" xmlns:core="sap.ui.core">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<core:Icon src="sap-icon://hint" class="infoIcon" color="#031E48" id="iconHint">
						<core:layoutData>
							<FlexItemData growFactor="1"/>
						</core:layoutData>
					</core:Icon>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>